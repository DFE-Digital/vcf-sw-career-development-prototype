<script> 
   // Get the current page URL
   var currentPageUrl = window.location.pathname;

   // Get the navigation items
   var navigationItems = document.getElementsByClassName("dfe-header__navigation-item");

   // Loop through the navigation items
   for (var i = 0; i < navigationItems.length; i++) {
      var navigationItem = navigationItems[i];

      // Get the link within the navigation item
      var link = navigationItem.querySelector("a");

      // Check if the link's href matches the current page URL
      if (link.getAttribute("href") === currentPageUrl) {
         // Add the "dfe-header__navigation-item--current" class to the current navigation item
         navigationItem.classList.add("dfe-header__navigation-item--current");
      }
   }

// Get the necessary elements
const toggleButton = document.getElementById('toggle-menu');
const navigationMenu = document.getElementById('header-navigation');

// Add an event listener to the toggle button
toggleButton.addEventListener('click', function() {
  const expanded = toggleButton.getAttribute('aria-expanded');
  const isExpanded = expanded === 'true';
  
  // Toggle the visibility of the navigation menu
  if (isExpanded) {
    toggleButton.setAttribute('aria-expanded', 'false');
    navigationMenu.style.display = 'none';
  } else {
    toggleButton.setAttribute('aria-expanded', 'true');
    navigationMenu.style.display = 'block';
  }
});
   // JavaScript code to handle the click event on the close button
   var closeMenuButton = document.getElementById('close-menu');
   var headerNavigation = document.getElementById('header-navigation');

   closeMenuButton.addEventListener('click', function() {
      headerNavigation.style.display = 'none';
   });

</script>